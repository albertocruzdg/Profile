@import 'normalize.styl'

a
	color #22BCE0

body
	background #EEEEEE
	font-family 'Open Sans', sans-serif

.Header
	background #EDE792
	text-align center
	overflow hidden

.Header-image
	border .2em solid #533706
	border-radius 50%
	margin-top 50px
	width 120px

.Header-imageContainer
	margin 1em

.MainMenu
	background rgba(238,238,238,.7)
	border-bottom .3em solid rgba(83,55,6,0.5)
	margin 0em .3em
	padding 1em 0em .5em 0em
	text-align center
	right 0
	left 0
	position absolute
		
.MainMenu-f
	left 0
	position fixed
	right 0
	top 0

.MainMenu-list
	margin 0px
	padding 0px
	
.MainMenu-item
	display inline-block

.MainMenu-link
	padding .5em
	text-decoration none
	transition .3s
	color black
	&:hover
		background rgba(83,55,6,0.5)
		color white

.Skill-list
	border 3px solid #009AB9
	padding 10px 5px
	overflow hidden

.Skill-item
	display inline-block
	margin 3px 1px
	padding 4px 5px 4px 14px
	background #22BCE0
	border-radius 5px
	transition .3s
	color white
	&:hover
		background #44DEFF
		color black
		padding 4px 14px 4px 5px

.Footer
	overflow hidden
	text-align center
	background #EDE792

.Footer-link
	background #22BCE0
	border-radius 10px
	color white
	padding 3px 10px
	text-decoration none
	transition .3s
	&:hover
		color #22BCE0
		background white

.Position-item
	background #EADD14
	/*margin 1em*/
	overflow hidden
	padding 5px
	&:nth-child(odd)
		background #EDE792

.Position-section
	margin 1em 0px

.About-section
	margin-top 70px

.About-description
	text-align justify

@media screen and (min-width: 600px)
	.Header-image
		width 240px

	.Header
		padding 0 0 1.5em 0
	.Skill-section,.Position-section
		float left
		width 48%
		margin 1%
	.About-section
		margin 70px 1% 1% 1%
	.div-columns
		overflow hidden
		margin 0px 0px .83em 0px

	body
		font-size 18px